{
    "name": "birdcage",
    "version": "0.0.1",
    "description": "",
    "main": "dist/backend/main.js",
    "license": "MIT",
    "files": [
        "dist/",
        "src/"
    ],
    "bin": {
        "birdcage": "dist/backend/birdcage.js"
    },
    "scripts": {
        "dev": "npm run dev-backend && npm run dev-frontend",
        "build": "npm run build-backend && npm run build-frontend",
        "build-clean": "npm run clear && npm run build",
        "start": "node birdcage.js",
        "build-backend": "cross-env NODE_ENV=production tsc --project tsconfig.backend.json",
        "dev-backend": "ts-node-dev src/backend/main.ts",
        "build-frontend": "cross-env NODE_ENV=production parcel build src/frontend/*.html --public-url . --out-dir ./dist/www/",
        "dev-frontend": "parcel watch src/frontend/*.html --public-url . --out-dir ./dist/www/",
        "clear": "rimraf .cache & rimraf dist"
    },
    "ultra": {
        "concurrent": [
            "dev"
        ]
    },
    "browserslist": [
        "last 2 Chrome versions"
    ],
    "devDependencies": {
        "@babel/core": "7.12.3",
        "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.1",
        "@babel/plugin-proposal-optional-chaining": "7.12.1",
        "@babel/plugin-transform-typescript": "^7.12.1",
        "@babel/preset-env": "^7.12.1",
        "@babel/preset-react": "^7.12.1",
        "@types/bcrypt": "3.0.0",
        "@types/connect-redis": "0.0.14",
        "@types/express": "4.17.8",
        "@types/express-session": "1.17.0",
        "@types/http-proxy": "1.17.4",
        "@types/node": "14.14.2",
        "@typescript-eslint/eslint-plugin": "4.5.0",
        "@typescript-eslint/parser": "4.5.0",
        "cross-env": "7.0.2",
        "cssnano": "4.1.10",
        "eslint": "7.12.0",
        "eslint-config-prettier": "6.14.0",
        "eslint-plugin-prettier": "3.1.4",
        "listr2": "3.2.1",
        "node-sass": "4.14.1",
        "parcel-bundler": "1.12.4",
        "prettier": "2.1.2",
        "rimraf": "3.0.2",
        "ts-loader": "8.0.7",
        "ts-node": "9.0.0",
        "ts-node-dev": "1.0.0",
        "typescript": "4.0.3",
        "ultra-runner": "3.5.0"
    },
    "dependencies": {
        "@toes/core": "dev",
        "axios": "^0.21.0",
        "bcrypt": "^5.0.0",
        "chalk": "^4.1.0",
        "class-transformer": "^0.3.1",
        "class-validator": "^0.12.2",
        "connect-redis": "^5.0.0",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "handy-redis": "^2.0.1",
        "http-proxy": "^1.18.1",
        "mime": "^2.4.6",
        "node-forge": "^0.10.0",
        "plumbing-toolkit": "^1.2.0",
        "preact": "^10.5.5",
        "preact-router": "^3.2.1",
        "pretty-json-stringify": "0.0.2",
        "reflect-metadata": "^0.1.13",
        "routing-controllers": "^0.9.0-alpha.6",
        "typedi": "^0.8.0",
        "unistore": "^3.5.2"
    },
    "alias": {
        "shared": "./src/shared",
        "frontend": "./src/frontend",
        "backend": "./src/backend"
    }
}
