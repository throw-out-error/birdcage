{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "LF",
        "target": "es2019",
        "sourceMap": true,
        "pretty": true,
        "jsx": "react",
        "jsxFactory": "h",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "lib": ["esnext", "dom"],
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "shared/*": ["/src/shared/*"],
            "frontend/*": ["/src/frontend/*"],
            "backend/*": ["/src/backend/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
